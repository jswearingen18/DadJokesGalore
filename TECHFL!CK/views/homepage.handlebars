<div class='cards'>
  {{#each jokes as |joke|}}
    <div class='card'>
      <div class='card-container'>
        <p>{{jokes}}</p>
      </div>
      <div class='card-overlay'>

        <button
          class='like-button'
          data-joke-id='{{id}}'
          data-joke-like='{{likes}}'
        >不{{likes}}
        </button>

        <p class='card-description'>-{{user.name}}
          posted this joke on
          {{format_date date_created}}
        </p>
        <button
          class='dislike-button'
          data-joke-id='{{id}}'
          data-joke-like='{{likes}}'
        >對{{likes}}
        </button>
      </div>
    </div>

  {{/each}}
</div>
